{% extends 'base.html.twig' %}

{% block title %}
  {{ 'REPOSITORY_LIST_TITLE'|trans }}
{% endblock %}

{% block body %}
<div class="row row-cols-3 g-4">
  {% for repository in repositories %}
    <div class="col">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <a href="{{ path('repository_show', { repo: repository.name }) }}">{{ repository.name }}</a>
          {% if repository.branches|length > 0 %}
          <a href="{{ path('repository_feed', { repo: repository.name, commitish: repository.defaultBranch, format: 'rss' }) }}" class="btn btn-sm btn-secondary">
            <i class="icon ion-logo-rss"></i> {{ 'REPOSITORY_TOOLBAR_FEED_RSS'|trans }}
          </a>
          {% else %}
          <span class="btn btn-sm btn-secondary disabled"><i class="icon ion-logo-rss"></i> {{ 'REPOSITORY_TOOLBAR_FEED_RSS'|trans }}</span>
          {% endif %}
        </div>
        <div class="card-body">
          {{ repository.description }}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
